{
  "name": {
    "en": "myAir Zone"
  },
  "class": "thermostat",
  "capabilities": [
    "onoff",
    "measure_temperature",
    "measure_ventopen",
    "target_temperature"
  ],
  "platforms": [
    "local"
  ],
  "connectivity": [
    "lan"
  ],
  "images": {
    "small": "{{driverAssetsPath}}/images/aircon_small.png",
    "large": "{{driverAssetsPath}}/images/aircon_large.png",
    "xlarge": "{{driverAssetsPath}}/images/aircon_xlarge.png"
  },
  "pair": [
    {
      "id": "my_view"
    },
    {
      "id": "list_devices",
      "template": "list_devices",
      "navigation": {
        "next": "add_devices"
      }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ]
}